<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12171D"
    app:circularflow_radiusInDP="5dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/minilogo" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="227dp"
        android:text="FORTEX ACCOUNT NAME"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="347dp"
        android:text="PASSWORD"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_name_editTextText"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="254dp"
        android:textColor="@color/black"
        android:background="@drawable/plain_text_shape"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login_signin_button"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="452dp"
        android:background="@drawable/button_shape"
        android:text="Sign in"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login_create_account_button"
        android:layout_width="299dp"
        android:layout_height="25dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="607dp"
        android:background="@drawable/button_shape"
        android:text="Donâ€™t have Fortex account?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_editTextTextPassword"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="371dp"
        android:background="@drawable/plain_text_shape"
        android:ems="10"
        android:textColor="@color/black"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
